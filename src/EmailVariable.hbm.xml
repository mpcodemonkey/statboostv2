<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.statboost.models.email.EmailVariable" table="stt_email_variable">
        <id name="uid" column="evr_uid">
            <generator class="identity"/>
        </id>
        <property name="name" column="evr_name"/>
        <property name="defaultValue" column="err_default_value"/>
        <property name="format" column="evr_format"/>
        <property name="displayName" column="evr_display_name"/>

        <many-to-one name="emailVariableGroup" class="com.statboost.models.email.EmailVariableGroup"
                     column="evr_evg_uid" not-null="true" insert="true" update="true"
                     cascade="all" />
    </class>
</hibernate-mapping>